pipeline {
    agent any
    stages {
        stage("hello") {
            steps {
                echo("Hello World") 
            }
        }
    }
}

// label
pipeline {
    agent {
        node {
            label "linux && fedora"
        }
    }
    stages {
        stage("hello") {
            steps {
                echo("Hello World") 
            }
        }
    }
}

// Post
pipeline {
    agent any
    stages {
        stage("hello") {
            steps {
                echo("Hello World") 
            }
        }
    }
    post {
        always {
            echo "Always Condition"
        }
        success {
            echo "Jika sukses"
        }
        failure {
            echo "Gagal tol"
        }
        cleanup {
            echo "gapeduli sukses or gagal kamu tetap yang terbaik"
        }
    }
}

// Stages
pipeline {
    agent any
    stages {
        stage("Build") {
            steps {
                echo "Build Running"
            }
        }
        stage("Test") {
            steps {
                echo "Test Running"
            }
        }
        stage("Deploy") {
            steps {
                echo "Deploy Running"
            }
        }
    }
    post {
        always {
            echo "Always Condition"
        }
        success {
            echo "Jika sukses"
        }
        failure {
            echo "Gagal tol"
        }
        cleanup {
            echo "gapeduli sukses or gagal kamu tetap yang terbaik"
        }
    }
}